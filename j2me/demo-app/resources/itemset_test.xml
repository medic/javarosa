<h:html xmlns:h="http://www.w3.org/1999/xhtml"
        xmlns="http://www.w3.org/2002/xforms"
	  xmlns:ev="http://www.w3.org/2001/xml-events"
	  xmlns:xsd="http://www.w3.org/2001/XMLSchema"
	  xmlns:jr="http://openrosa.org/javarosa">
<h:head>
    <h:title>Itemset Testing</h:title>
    <meta jr:name="itemset-test"/>
    <model>
		<itext>
			<translation lang="English">
				<text id="q1">
					<value>LOCALIZED NAME</value>
				</text>
				<text id="b">
					<value>BBBBBB</value>
				</text>
				<text id="c">
					<value>CCCC</value>
				</text>
				<text id="d">
					<value>dddddd</value>
				</text>
			</translation>
		</itext>
		
		<instance>
			<stuff>
				<clinics>
					<clinics-jhb>
						<clinic>
							<name>q1</name>
							<size>10</size>
						</clinic>
						<clinic>
							<name>b</name>
							<size>77</size>
						</clinic>
						<clinic>
							<name>c</name>
							<size>2</size>
						</clinic>
						<clinic>
							<name>d</name>
							<size>10</size>
						</clinic>
					</clinics-jhb>
					<clinics-cpt>
						<clinic>
							<name>R</name>
							<size>1200</size>
						</clinic>
						<clinic>
							<name>F</name>
							<size>2345</size>
						</clinic>
						<clinic>
							<name>G</name>
							<size>11200</size>
						</clinic>
						<clinic>
							<name>S</name>
							<size>180</size>
						</clinic>
						<clinic>
							<name>T</name>
							<size>99</size>
						</clinic>				
					</clinics-cpt>
					<clinics-data>
						<clinic>
							<region />
							<name />
							<size />
						</clinic>
					</clinics-data>
				</clinics>
			</stuff>
		</instance>
		<bind id="reg"     nodeset="/stuff/clinics/clinics-data/clinic/region" required = "true()" />
		<bind id="data"    nodeset="/stuff/clinics/clinics-data/clinic/name" relevant="selected(/stuff/clinics/clinics-data/clinic/region,'Johannesburg')"/>

	</model>
</h:head>

<h:body>
	<select1 bind="reg">
		<label>Select Region</label>
		<item><label>Johannesburg</label><value>Johannesburg</value></item>
		<item><label>Capetown</label><value>Capetown</value></item>
	</select1>
	
	<select1 bind="data">
		<label>Clinic Listing</label>
		<itemset nodeset="/stuff/clinics/clinics-jhb/clinic" >
			<value ref="name"/>
			<label ref="jr:itext(name)"/>
		</itemset>
	</select1>

</h:body>
</h:html>